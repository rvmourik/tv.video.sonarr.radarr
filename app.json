    "flow": {
		"triggers": [
			{
				"id": "grab_episode",
				"title": {
					"en": "Episode started downloading",
					"nl": "Episode gestart downloaden"
				},
				"hint": {
					"en": "Trigger a flow when an episode has started downloading.",
					"nl": "Trigger een flow wanneer een episode is gestart met downloaden."
				},
                "tokens": [
                    {
                        "name": "title",
                        "type": "string",
                        "title": {
                            "en": "title",
                            "nl": "titel"
                        },
                        "example": {
                            "en": "...And the Bag's in the River",
                            "nl": "...And the Bag's in the River"
                        }
                    },
                    {
                        "name": "episode",
                        "type": "number",
                        "title": {
                            "en": "episode",
                            "nl": "episode"
                        },
                        "example": 3
                    },
                    {
                        "name": "season",
                        "type": "number",
                        "title": {
                            "en": "season",
                            "nl": "seizoen"
                        },
                        "example": 1
                    },
                    {
                        "name": "serie",
                        "type": "string",
                        "title": {
                            "en": "serie",
                            "nl": "serie"
                        },
                        "example": "Breaking Bad"
                    }
                ],
