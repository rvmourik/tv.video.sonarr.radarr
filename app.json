	"dependencies": {
		"net": "*"
	},
    "permissions": [
        "homey:manager:speech-input",
        "homey:manager:speech-output"
    ],
	"drivers": [
        {
			"id": "sonarr",
			"name": {
				"en": "Sonarr",
				"nl": "Sonarr"
			},
			"images": {
				"large": "drivers/sonarr/assets/images/large.jpg",
				"small": "drivers/sonarr/assets/images/small.jpg"
			},
			"class": "other",
            "capabilities": [
            ],
			"pair": [
				{
					"id": "start"
				}
			],
			"settings": [
			    {
                    "type": "group",
                    "label": {
                        "en": "Sonarr Settings",
						"nl": "Sonarr Instellingen"
                    },
					"children": [
				        {
				            "id": "address",
				            "type": "text",
				            "value": "0.0.0.0",
				            "label": {
				                "en": "IP Address",
				                "nl": "IP Adres"
				            }
				        },
                        {
				            "id": "port",
				            "type": "number",
				            "value": 8989,
                            "min": 0,
			                "max": 65535,
			                "step": 1,
				            "label": {
				                "en": "Port",
				                "nl": "Poort"
				            }
				        },
				        {
					        "id": "apikey",
					        "type": "text",
					        "value": "",
					        "label": {
						        "en": "Sonarr Api Key",
						        "nl": "Sonarr Api Key"
					        }
				        }
		            ]
		        }
		    ]
		},
        {
			"id": "radarr",
			"name": {
				"en": "Radarr",
				"nl": "Radarr"
			},
			"images": {
				"large": "drivers/radarr/assets/images/large.jpg",
				"small": "drivers/radarr/assets/images/small.jpg"
			},
			"class": "other",
            "capabilities": [
            ],
			"pair": [
				{
					"id": "start"
				}
			],
			"settings": [
			    {
                    "type": "group",
                    "label": {
                        "en": "Radarr Settings",
						"nl": "Radarr Instellingen"
                    },
					"children": [
				        {
				            "id": "address",
				            "type": "text",
				            "value": "0.0.0.0",
				            "label": {
				                "en": "IP Address",
				                "nl": "IP Adres"
				            }
				        },
                        {
				            "id": "port",
				            "type": "number",
				            "value": 8310,
                            "min": 0,
                            "max": 65535,
                            "step": 1,
				            "label": {
				                "en": "Port",
				                "nl": "Poort"
				            }
				        },
				        {
					        "id": "apikey",
					        "type": "text",
					        "value": "",
					        "label": {
						        "en": "Radarr Api Key",
						        "nl": "Radarr Api Key"
					        }
				        }
		            ]
		        }
		    ]
		}
